<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/widget" />
        <Constraint
            android:id="@+id/image_house"
            android:layout_height="70dp"
            android:layout_width="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/widget" />
        <Constraint
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toTopOf="@id/divider"
            android:alpha="0"
            android:id="@+id/image_map"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="150dp" />
        <Constraint
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toTopOf="@id/divider"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/image_search"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="150dp" />
        <Constraint
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:id="@+id/image_house"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_editor_absoluteY="281dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            android:layout_marginBottom="230dp" />
        <Constraint
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="70dp"
            android:id="@+id/image_loan"
            app:layout_constraintBottom_toTopOf="@id/divider"
            android:layout_marginBottom="70dp" />
    </ConstraintSet>

    <Transition
        android:id="@+id/starting_animation"
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:autoTransition="animateToEnd"
        app:duration="2500">
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/image_loan"
                app:framePosition="50"
                android:alpha="0.5" />
            <KeyAttribute
                app:motionTarget="@+id/image_search"
                app:framePosition="50"
                android:alpha="0.5" />
            <KeyAttribute
                app:motionTarget="@+id/image_house"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/image_map"
                app:framePosition="50"
                android:alpha="0.5" />
            <KeyAttribute
                app:motionTarget="@+id/image_house"
                app:framePosition="100"
                android:alpha="1" />
            <KeyAttribute
                app:motionTarget="@+id/image_loan"
                app:framePosition="100"
                android:alpha="1" />
            <KeyAttribute
                app:motionTarget="@+id/image_map"
                app:framePosition="100"
                android:alpha="1" />
            <KeyAttribute
                app:motionTarget="@+id/image_search"
                app:framePosition="100"
                android:alpha="1" />
            <KeyAttribute
                app:motionTarget="@+id/image_house"
                app:framePosition="0"
                android:alpha="0.5" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
